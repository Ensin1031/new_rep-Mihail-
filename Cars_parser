import openpyxl

def Cars(marka):
    if not isinstance(marka, str):
        raise ValueError('Введите строковое значение')
    book = openpyxl.open('C:\\GitHub_Desktop\\avtovoz_cars.xlsx', read_only=True)
    sheet_01 = book.active
    cells = sheet_01['a2':f'g{sheet_01.max_row}']
    for name, model, body, visual, form_money, drive, size in cells:
        if name.value == marka:
            if size.value == None:
                print(f'{name.value} {model.value} {body.value}, Видимость системой: {visual.value}, Формат цен: {form_money.value}, Возможность транспортировки: {drive.value}, Вне габарита: нет')
            else:
                print(f'{name.value} {model.value} {body.value}, Видимость системой: {visual.value}, Формат цен: {form_money.value}, Возможность транспортировки: {drive.value}, Вне габарита: да')
    book.close()
